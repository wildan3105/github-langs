<center>
  <div class="inner cover">
    <br>
    <br>
    <a style="text-decoration:none; color:white" href='./' title='Back to home'>
      <h1 class="cover-heading">GitHub Language Checker</h1>
    </a>

    <br>
    <div class="container">
      <div class="row">
        <div class="order-md-2 col-md-6">
          <form id="search-form" action="" method="get" action="#">
            <div class="input-group">
              <input type="text" class="form-control" autofocus="autofocus" id="username" name="username" placeholder="Github username"
                required>
              <button type="submit" class="input-group-addon btn" name="" onClick="showLoader();">
                <i class="fa fa-search"></i> &nbsp;Search
              </button>
            </div>
          </form>
        </div>
        <div class="col-md-3"></div>
      </div>

    </div>
  </div>
  <div id="overlay">
    <div class="spinner"></div>
  </div>
  <div id="realContent">
    <center>
      <h3>{{msg}}</h3>
      {{#if show.result}}
      <div class="result">
        <div class="container">
          <center>
            {{#if type}}
              <img class="img-organisation" src="public/img/blue-check.png" title='{{username}}' alt='{{username}}'/>
            {{/if}}
            <img class="img-circle" src='{{avatar}}'>
            <br>
            <div class="row">
              <div class="col-md-12">
                <h4> {{repos}} {{showEmoji}}</h4>
                <p class="random-statement">{{statement}}</p>
              </div>
            </div>
          </center>
        </div>
        {{#if show.chart}}
        <div>
          <div
            id="canvas-container"
            data-username='{{username}}'
            data-languages='{{languages}}'
            data-colors='{{colors}}'
          >
            <canvas id="myChart"></canvas>
            <div id="toggle-button-container" onclick="toggleColor()">
              <button id="btn-toggle" class="active">Toggle Color</button>
            </div>
            {{#if limitLabel}}
              <span class="badge badge-pill badge-primary">For users with a lot of repo, only shown top 20 languages</span>
              <br>
            {{/if}}
            <script>
              let singleColor = chart({ limit: 20 })
            </script>
            <button class="save" onclick="saveChart();">Save chart as an image</button>
          </div>
        </div>
        <br>
        <div id="social">
          <div class="social-btn">
            <a class="twitter-share-button"
              href="https://twitter.com/intent/tweet"
              data-url="https://githublangs.herokuapp.com?username={{username}}"
              data-text="My most used language is {{goodAt}}"
              data-hashtags="github,{{goodAt}}"
              data-size="large">
            Tweet</a>
          </div>
          <div class="fb-share-button social-btn" data-href="https://githublangs.herokuapp.com" data-layout="button" data-size="large" data-mobile-iframe="true">
            <a class="fb-xfbml-parse-ignore" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fgithublangs.herokuapp.com%2F&amp;src=sdkpreparse">
            Share</a>
          </div>
        </div>
        {{/if}}
      </div>
      {{/if}}
      <div class="mastfoot">
        <div class="inner">
          <p style="color:white">Disclaimer : This site is a fan made and not affiliated with GitHub.</p>
        </div>
      </div>
    </center>
</center>

<script src="public/js/spinner.js"></script>
<div id="fb-root"></div>
<script src="public/js/social.js"></script>
